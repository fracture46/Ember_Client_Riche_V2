<div>
  {{#ui-form newValue=model.tag  validation="save" cancel="cancel" bigIcon='tag' smallIcon='plus' header='Tag' description='Adding an object'}}
    <div class="two fields">
      <div class="field">
        <label id="" class="" for="frmEdit-title">Title</label>
        <div id="div-frmEdit-title" class="ui input">
          {{input id="frmEdit-title" value=model.tag.title placeholder="Title"}}
        </div>
      </div>
      <div class="field">
        <label id="" class="" for="frmEdit-color">Color</label>
        <div class="ui action input">
          <select class="ui compact selection dropdown" onchange={{action (mut model.tag.color) value="target.value"}}>
          {{#each model.colors as |color|}}
            <option value="{{color}}">{{color}}</option>
          {{/each}}
          </select>
        </div>
      </div>
    </div>
  {{/ui-form}}
</div>{{outlet}}